{
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "script"
  },
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "functions": "never",
        "objects": "always-multiline"
      }
    ],
    "strict": ["error", "global"],
    "import/newline-after-import": false,
    "no-console": "off",
    "no-plusplus": "off",
    "no-loop-func": "off"
  },
  "globals": {
    "document": true,
    "window": true
  }
}
